{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "types": ["cypress", "node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["ES6", "DOM"],
    "sourceMap": false
  },
  "include": ["cypress/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
